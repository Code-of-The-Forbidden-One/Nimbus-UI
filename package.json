{
  "name": "nimbus-ui",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "packageManager": "yarn@1.22.22",
  "scripts": {
    "run-build": "turbo run build ${SCOPE}",
    "run-lint": "turbo run lint ${SCOPE}",
    "run-format": "turbo run format ${SCOPE}",
    "run-test": "turbo run test ${SCOPE}",
    "run-check-types": "turbo run check-types ${SCOPE}",

    "run-dev": "turbo run dev ${SCOPE}",

    "run-dev-core": "yarn run run-dev --scope=nimbus-core",
    "run-dev-preact": "yarn run run-dev --scope=nimbus-preact",
    "run-dev-react-native": "yarn run run-dev --scope=nimbus-react-native",

    "run-test-core": "yarn run run-test --scope=nimbus-core",
    "run-test-preact": "yarn run run-test --scope=nimbus-preact",
    "run-test-react-native": "yarn run run-test --scope=nimbus-react-native",

    "run-lint-core": "yarn run run-lint --scope=nimbus-core",
    "run-lint-preact": "yarn run run-lint --scope=nimbus-preact",
    "run-lint-react-native": "yarn run run-lint --scope=nimbus-react-native",

    "run-build-core": "yarn run run-build --scope=nimbus-core",
    "run-build-preact": "yarn run run-build --scope=nimbus-preact",
    "run-build-react-native": "yarn run run-build --scope=nimbus-react-native",

    "run-format-core": "yarn run run-format --scope=nimbus-core",
    "run-format-preact": "yarn run run-format --scope=nimbus-preact",
    "run-format-react-native": "yarn run run-format --scope=nimbus-react-native",

    "run-check-types-core": "yarn run run-check-types --scope=nimbus-core",
    "run-check-types-preact": "yarn run run-check-types --scope=nimbus-preact",
    "run-check-types-react-native": "yarn run run-check-types --scope=nimbus-react-native"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@types/node": "^22.13.4",
    "@typescript-eslint/eslint-plugin": "^8.24.1",
    "@typescript-eslint/parser": "^8.24.1",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.20.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "prettier": "^3.5.1",
    "turbo": "^2.4.2",
    "typescript": "^5.7.3",
    "vite": "^6.1.0"
  },
  "workspaces": [
    "packages/nimbus-core",
    "packages/nimbus-preact",
    "packages/nimbus-react-native"
  ]
}
